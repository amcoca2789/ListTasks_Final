.calendario
	border 1px solid color_bordes
	border-radius 0.5em
	margin estandar_margin_div
	padding estandar_padding_div
	&-dia
		border 1px solid color_bordes
		border-radius 0.5em
		display inline-block
		margin estandar_margin_div
		padding estandar_padding_div
		vertical-align top
		&-detalle
			display block
			text-align center
			&-nombredia
				display block
				text-align center
			&-fecha
				display block
				text-align center
		&-resultado
			background-color white
			border 1px solid color_bordes
			border-radius 0.5em
			display block
			margin estandar_margin_div
			padding estandar_padding_div
			&-mensaje
				display block
				color red
				text-align center
		&-tarea
			background-color color_naranja_2
			border 1px solid color_bordes
			border-radius 0.5em
			display block
			margin estandar_margin_div
			padding estandar_padding_div
			&-contenedor
				margin estandar_margin_div
				padding estandar_padding_div
				text-align center
				&-conclusion
					display inline-block
					vertical-align middle
					&-boton
						display block
						padding 5px
						&:hover
							background-color color_fondo_body
				&-archivar
					display inline-block
					vertical-align middle
					&-boton
						display block
						padding 5px
						&:hover
							background-color color_fondo_body
			&-descripcion
				background-color white
				border 1px solid color_bordes
				border-radius 0.5em
				color black
				display block
				margin estandar_margin_div
				padding estandar_padding_div
				text-align center
				&-enlace
					border 1px solid color_bordes
					border-radius 0.5em
					display inline-block
					font-size 0.8em
					margin 0
					padding estandar_padding_enlace
					text-align center
					text-decoration none
					vertical-align middle
					&:active
						color color_texto
					&:hover
						background-color color_azul_1
					&:link
						color color_texto
					&:visited
						color color_texto
			&-edicion
				background-color color_azul_2
				border 1px solid color_bordes
				border-radius 0.5em
				display none
				margin estandar_margin_div
				padding estandar_padding_div
				&-input
					width 100%
				&-lista
					display block
					list-style none
					list-style-position inside
					margin estandar_margin_div
					padding estandar_padding_div
					text-align center
					&-item
						display inline-block
						vertical-align middle
						&-boton
							display block
							padding estandar_padding_enlace
							&:hover
								background-color color_fondo_body
				&-titulo3
					text-align center
					
	&-encabezado
		display block
		margin estandar_margin_div
		padding estandar_padding_div
		text-align center
		&-titulo3
			display block
			text-align center
		&-titulo4
			display block
			text-align center
	&-newtarea
		&-enlace
			border 1px solid color_bordes
			border-radius 0.5em
			display block
			padding estandar_padding_enlace
			text-align center
			text-decoration none
			&:active
				color color_texto
			&:hover
				background-color color_azul_1
			&:link
				color color_texto
			&:visited
				color color_texto
		&-formulario
			background-color color_verde_1
			border 1px solid color_bordes
			border-radius 0.5em
			display none
			margin estandar_margin_formulario
			padding estandar_padding_formulario
			&-input
				width 100%
			&-lista
				list-style none
				list-style-position inside
				margin estandar_margin_lista 
				padding estandar_padding_lista
				text-align center
				&-item
					display inline-block
					margin 0
					padding 0
					vertical-align middle
					&-boton
						display block
						padding 5px
						&:hover
							background-color color_fondo_body
			&-titulo3
				text-align center
			